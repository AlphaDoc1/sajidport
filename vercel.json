{
    "version": 2,
    "builds": [
      { "src": "server/index.ts", "use": "@vercel/node" },
      { "src": "vite.config.ts", "use": "@vercel/static-build", "config": { "distDir": "dist/public" } }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "dist/index.js" },
      { "src": "/(.*)", "dest": "/dist/public/index.html" }
    ]
  }
  